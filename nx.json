{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "depcheck": {}
  },
  "plugins": [],
  "release": {
    "releaseTagPattern": "{version}",
    "version": {
      "conventionalCommits": true
    },
    "git": {
      "commitMessage": "chore(release): {version}"
    },
    "projects": [
      "packages/*",
      "!packages/test"
    ]
  }
}