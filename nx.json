{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "cache": true
    },
    "lint": {
      "cache": true,
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "cache": true,
      "dependsOn": [
        "build"
      ]
    },
    "depcheck": {}
  },
  "plugins": [],
  "release": {
    "projectsRelationship": "independent",
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "updateDependents": "auto",
        "skipLockFileUpdate": true
      }
    },
    "git": {
      "commitMessage": "chore(release): {version}"
    },
    "projects": [
      "packages/*",
      "!packages/test"
    ],
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": false
        }
      }
    }
  }
}