  "license": "MIT",
  "volta": {
    "node": "18.18.2",
    "yarn": "1.22.22"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "depcheck": "turbo depcheck",
    "ci": "turbo ci",
    "docs": "typedoc && open doc/index.html",
    "publish-packages": "turbo build && pnpm changeset-conventional && changeset version && git add -A && git commit -m \"chore: release\" && changeset publish && git push origin"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  }
